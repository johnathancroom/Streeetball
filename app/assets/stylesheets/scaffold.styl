.field_with_errors {
  padding: 2px;
  background-color: red;
  display: table;
}

#error_explanation {
  width: 450px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 0;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#error_explanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: -7px;
  margin-bottom: 0px;
  background-color: #c00;
  color: #fff;
}

#error_explanation ul li {
  font-size: 12px;
  list-style: square;
}

[class^="flash_"], [class*=" flash_"] {
  border: 2px solid #f00;
  border-radius: 3px;
  margin-bottom: 25px;
  padding: 8px;
  text-shadow: none;
}
.flash_alert,
.flash_error {
  background-color: lighten(#f00, 90%);
  border-color: #f00;
  color: red;
}
.flash_notice {
  background-color: lighten(#0f0, 90%);
  border-color: #0f0;
  color: green;
}