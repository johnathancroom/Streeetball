.field_with_errors input[type="text"],
.field_with_errors input[type="password"],
.field_with_errors input[type="file"],
.field_with_errors input:hover {
  box-shadow: 0px 0px 3px 1px #ff5959;
}
#error_explanation ul {
  margin-left: 16px;
}
#error_explanation,
#error_explanation ul li {
  color: #ff5959;
  font-size: 13px;
  line-height: 16px;
  padding-bottom: 10px;
  text-shadow: none;
}
#error_explanation h2 {
  color: #ff5959;
  font-size: 13px;
  margin-bottom: 10px;
  text-shadow: none;
}
#error_explanation ul li {
  list-style: disc;
}
[class^="flash_"], [class*=" flash_"] {
  border: 2px solid #f00;
  border-radius: 3px;
  margin-bottom: 25px;
  padding: 8px;
  text-shadow: none;
}
.flash_alert,
.flash_error {
  background-color: lighten(#f00, 90%);
  border-color: #f00;
  color: red;
}
.flash_notice {
  background-color: lighten(#0f0, 90%);
  border-color: #0f0;
  color: green;
}