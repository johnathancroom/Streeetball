//////////////////////////////////////////////////////////////////////////////

body, input, textarea, select {
  font-family: PTSansRegular, Arial, Helvetica, Geneva, sans-serif;
}
h2, h3, h4, h5, h6,
.single h1,
.single .by a,
.single .comment a.user,
.profile .head h1,
.profile .head .functions,
.new,
strong,
.player {
  font-family: PTSansBold, Arial, Helvetica, Geneva, sans-serif;
  margin-bottom: 10px;
}
body {
  background: url("pattern-main.png") #f5f5f5;
  text-shadow: 0px 1px 0 #FFF;
}
a {
  color: inherit;
  font: inherit;
}
h1 {
  color: #808080;
  font-size: 20px;
  letter-spacing: -1px; //0
  margin-bottom: 14px;
}
h1,
form,
.jcrop-holder {
  max-width: 320px;
  margin: 0 auto;
}
h1.crop,
.edit_post {
  max-width: 400px;
}
label {
  color: #999;
  font-size: 13px;
  text-shadow: none;
}
textarea {
  border-radius: 2px;
  height: 100px;
  max-width: 100%;
  padding: 6px;
  width: 100%;
}
.top-nav {
  background: url("pattern-header.png");
  border-bottom: 1px solid #c7c7c7;
  box-shadow:
    inset 0px 30px 30px 0px rgba(255,255,255, .6),
    0px 1px 6px 0px rgba(0, 0, 0, 0.12);
  color: #f5f5f5;
  font-size: 18px;
  margin-bottom: 24px;
  padding: 22px 0 20px 0;
}
.wrapper {
  margin: 0 auto;
  max-width: 930px;
  padding: 0 20px;
}
.user-functions {
  color: #808080;
  font-size: 13px;
  position: absolute;
  right: 20px;
  text-align: right;
  text-decoration: none;
  top: 0;
}
.user-functions .plain {
  top: 7px;
}
.user-functions .profile-image {
  border: 2px solid #bababa;
  border-radius: 0;
  box-shadow: 0px 1px 0px 0px #fff;
  margin-right: 6px;
  width: 31px;
}
.user-functions a {
  margin-left: 5px;
  text-transform: lowercase;
  &:hover {
    color: #999;
  }
}
.user-functions .primary,
.user-functions .new {
  display: inline-block;
  margin-right: 18px;
  
  /* dividers */
  &:before,
  &:after {
    background1();
    content:"";
    height: 30px;
    right: -15px;
    position: absolute;
    top: 0px;
    width: 1px;
  }
  &:after {
    background2();
    right: -16px;
  }
}
.user-functions .new {
  font-size: 26px;
  padding: 1px 8px 2px 8px;
  border-radius: 3px;
}
.user-functions .primary {
  padding: 7px 11px 9px 11px;
}
.user-functions .primary,
.user-functions .new,
.submit {
  appearance: none;
  background: lighten($btnMain, 10%);
  border-radius: 4px;
  box-shadow:
    inset 0px 1px 0px 0px rgba(255,255,255,0.3),
    inset 0px -30px 40px -20px rgba(0,0,0,0.4),
    inset 0px 0px 3px 0px rgba(255,255,255,0.3),
    0px 0px 0px 1px darken($btnMain, 20%),
    inset 0px 13px 0px 0px rgba(255,255,255,.1),
    0px 0px 3px 0px rgba(0,0,0,0.3);
  color: #FFF;
  cursor: pointer;
  text-shadow: 0px 1px 2px rgba(0,0,0,0.5);
  
  &:hover {
    background: lighten($btnMain, 12%);
    box-shadow:
      inset 0px 2px 0px 0px rgba(255,255,255,0.2),
      inset 0px -30px 40px -20px rgba(0,0,0,0.4),
      inset 0px 1px 4px 1px rgba(255,255,255,0.1),
      0px 0px 0px 1px darken($btnMain, 20%),
      inset 0px 13px 0px 0px rgba(255,255,255,.1),
      inset 0px -2px 0px 0px rgba(0,0,0,.1),
      0px 0px 3px 0px rgba(0,0,0,0.3);
    color: #FFF;
    text-decoration: none;
    text-shadow: 0px 1px 2px rgba(0,0,0,0.6);
  }
  &:active { 
    background: $btnMain;
    box-shadow:
      inset 0px 1px 0px 0px rgba(255,255,255,0.3),
      inset 0px 30px 40px -20px rgba(0,0,0,0.18),
      inset 0px 0px 3px 0px rgba(255,255,255,0.3),
      0px 0px 0px 1px darken($btnMain, 20%),
      inset 0px -13px 0px 1px rgba(255,255,255,.1),
      inset 0px -2px 0px 0px rgba(255,255,255,.15),
      0px 0px 3px 0px rgba(0,0,0,0.3);
    color: #FFF;
  }
}
textarea,
input[type=text],
input[type=password],
input[type=submit],
input[type=file] {
  display: block;
  line-height: 18px;
}
textarea,
input[type=text],
input[type=password]  {
  background: rgba(0,0,0,0.02);
  border: 1px solid #FFF;
  box-shadow: inset 0 1px 0 1px #D1D1D1;
  color: #7a7a7a;
  font-size: 13px;
  margin-top: 16px;
  
  &:focus {
    // Needs focus styles
    outline: none;
  }
}
input[type=text],
input[type=password] {
  border-radius: 2px;
  display: inline-block;
  height: 18px;
  padding: 16px 8px;
  text-shadow: 0px 1px 0px #eee;
  width: 100%;
  
  &:focus {
    background: #ededed;
  }
}
.submit,
.learn {
  border: none; //default! ugly culprit!
  font-size: 13px;
  text-transform: lowercase;
}
.submit {
  margin: 12px 0 0px 0;
  padding: 6px 11px;
}
.forgot {
  bottom: 9px;
  color: #808080;
  font-size: 14px;
  position: absolute;
  right: 0;
  text-shadow: none;
  text-transform: lowercase;
  
  &:hover {
/*     color: #999; */
    text-decoration: underline;
  }
}
.catch {
  border-bottom: 1px solid #e8e8e8;
  color: #656565;
  display: block;
  font-size: 16px;
  line-height: 24px;
  margin:  20px 0px 20px 0px;
  padding-bottom: 20px;
}
.catch .learn {
  background: #b1b1b1;
  border: 1px solid #999;
  border-radius: 4px;
  box-shadow: 
    inset 0px 2px 0px 0px rgba(255,255,255, .1),
    inset 0px -10px 5px 0px rgba(0,0,0, .08),
    0px 1px 0px 0px #888;
  color: #fff;
  margin-left: 10px;
  padding: 6px 8px;
  text-shadow: 1px 1px 1px #777;
  white-space: nowrap;
  
  &:hover,
  &:active {
    background: lighten(#a1a1a1, 5%);
    border: 1px solid darken(#999, 5%);
    box-shadow: 
      inset 0px 2px 0px 0px rgba(255,255,255, .15),
      inset 0px -10px 5px 0px rgba(0,0,0, .08),
      0px 1px 0px 0px #888;    
  }
  &:active {
    box-shadow: 
      inset 0px 2px 0px 0px rgba(255,255,255, .1),
      inset 0px 10px 5px 0px rgba(0,0,0, .05),
      0px 1px 0px 0px #777;
  }
}
.catch .player {
  padding-left: 19px;
  
  &:before {
    background-image: url("dribbble-logo.png");
    background-repeat: no-repeat;
    content: "";
    height: 17px;
    left: 0px;
    position: absolute;
    top: 0px;
    width: 17px;
  }
}
.confirm h1 {
  max-width: none;
  margin: 0 0 12px 0;
}
.about p,
.about .credits h1,
.confirm p {
  color: #707070;
  font-size: 13px;
  line-height: 22px;
  text-shadow: 1px 1px 0px #eee;
}
.about,
.about .credits {
  margin: 40px auto;
  text-align: center;
}
.about {
  text-align: left;
}
.about h1 {
  margin-bottom: 10px;
  max-width: none;
}
.about p {
  margin-bottom: 20px;
}
.about .credits {
  border-top: 1px solid #e8e8e8;
  margin: 25px 0 50px 0;
  padding-top: 25px;
}
.about .credits h1,
.about .credits p {
  color: #999;
  font-size: 13px;
}
.about .credits h1 {
  font-weight: normal;
  letter-spacing: 0px;
}
.about .credits p {
  font-size: 15px;
  margin: 0px 0 20px 0;
}
.about p a:hover {
  color: $textHlight;
}
.about .icon-twitter {
  background-color: #dfdfdf;
  border-radius: 100%;
  color: #fff;
  font-size: 18px;
  padding: 8px;
/*   margin-left: 96%; */
  text-shadow: none;
  text-decoration: none;
  
  &:hover {
    background-color: #d8d8d8; 
  }
}
.confirm {
  background-image: url(mail.png);
  background-repeat: no-repeat;
  height: 143px;
  margin: 70px auto;
  padding-left: 226px;
  width: 600px;
}
.confirm h1,
.confirm p {
  color: #a1a1a1;
}
.confirm div {
  margin: 6px 0;
}
.confirm p {
  padding-left: 176px;
}
.confirm h1 span,
.confirm a {
  color: $textHlight;
}
.confirm a:hover {
  text-decoration: underline;
}
.profile-image {
  border: 4px solid #FFF;
  border-radius: 2px;
  box-shadow: 0 1px 0 0 #CCC;
}
.profile {
  color: #adadad;
  height: 110px; /* .profile-image + 20px */
  margin: 38px 0 14px 0;
}
.profile .head {
  padding-top: 4px;
}
.profile .head a {
  color: #a7a7a7;
  font-size: 13px;
  margin-right: 10px;
  top: 3px;
}
.profile .head a:hover {
/*   text-decoration: underline; */
  color: #757575;
}
.profile .head a.social {
  font-weight: bold;
  top: 2px;
}
.profile .head a.social:before {
  left: -1px;
  position: relative;
  top: -1px;
}
.profile .head h1 {
  color: $textHlight;
  float: left;
  font-size: 20px;
  margin: 0 10px 0 0;
  top: -2px;
}
.profile .head .functions {
  position: absolute;
  right: 0;
  top: 0;
}
.profile .head .functions a {
  background-color: #a1a1a1;
  border-radius: 3px;
  box-shadow:
    inset 0px 1px 0px 0px rgba(0,0,0, .1),
    0px 1px 0px 0px rgba(255,255,355, 1);
  color: #fff;
  font-weight: normal;
  margin: 0 0 0 5px;
  padding: 5px 6px 5px 6px;
  text-shadow: 0px 1px 0px rgba(0,0,0, .2);

  &:hover {
    background-color: darken(@background-color, 16%);
  }
}
.profile .head .functions .icon-dribbble {
  background-color: $dribbble;
  text-shadow: 0px 1px 0px rgba(0,0,0, .1);
  
  &:hover {
    background-color: darken(@background-color, 16%);
  }
}
.profile .head .functions .icon-dribbble:before {
  top: 0;
}
.profile p {
  font-size: 13px;
}
.profile .profile-image {
  float: left;
  margin: 0px 20px 0px 0px;
  width: 90px;
}
.profile .bio {
  color: #666;
  font-size: 14px;
  line-height: 1.5em;
  margin-top: 10px;
  text-shadow: none;
}
.edit_user textarea,
.edit_user input {
  margin: 4px 0 18px 0;
}
.upload {
  margin: 16px 0px;
}
.upload input {
  color: #656565;
}
.upload .fineprint {
  color: #999;
  font-size: 13px;
  line-height: 20px;
  list-style: disc;
  margin: 14px 0 14px 20px;
  text-shadow: none;
}
.jcrop-holder {
  max-width: 400px;
  margin-top: 20px;
}
.post {
  background: #fafafa;
  border-radius: 3px;
  box-shadow: 0 1px 2px 0 #dfdfdf;
  display: inline-block;
  height: 144px + 20px;
  margin: 0 14px 20px 0;
  width: 192px + 20px;
}
.post img {
  height: 144px;
  margin: 10px;
  width: 192px;
}
.post:nth-of-type(4n) {
  margin-right: 0;
}
.single {
  margin: 0 auto;
  padding: 0 6px;
  width: 422px;
}
.single .post {
  height: 300px + 20px;
  left: -6px;
  margin: 0 0 12px 0;
  width: 400px + 20px;
}
.single .post img {
  height: 300px;
  width: 400px;
}
.single h1 {
  color: #636363;
  font-size: 20px;
  margin: 10px 0 0 0;
}
.single .details {
  color: #a1a1a1;
  font-size: 13px;
  height: 30px;
  margin: 6px 0 0 0;
}
.single .by {
/*  float: left;*/
}
.single .by a,
.single .comment a.user {
  font-size: 15px;
}
.single .by a {
  color: $textHlight;
}
.single .by a:hover {
  text-decoration: underline;
}
.single .social {
/*  float: right;*/
  position: absolute;
  right: 0;
  text-align: right;
  top: 0;
}
.single .social a {
  display: inline-block;
  margin-left: 10px;
}
.single .social a:before {
  font-size: 12px;
  left: -2px;
  position: relative;
}
.single .social a.liked:before {
  color: #ee76a3;
}
.single .social a:hover {
  color: #666;
}
.single .comment {
  border-bottom: 1px solid #dfdfdf;
  font-size: 13px;
  padding: 15px 0 15px 50px;
}
.single .comment.last {
  border-bottom: none;
}
.single .comment img {
  left: 0;
  position: absolute;
  width: 40px;
}
.single .comment a.user {
  color: $textHlight;
}
.single .comment a.user:hover {
  text-decoration: underline;
}
.single .comment .blurb,
#post_description {
  color: #666;
  line-height: 18px;
  margin-top: 6px;
  text-shadow: none;
}
.single .comment .time {
  color: #B1B1B1;
  font-size: 10px;
  margin-top: 6px;
  text-shadow: none;
}
.single .new-comment {
  padding-left: 10px;
  text-align: right;
  width: 100%;
}
.single .new-comment textarea {
  color: #7a7a7a;
  font-size: 13px;
  height: 70px;
  line-height: 18px;
  padding: 12px; 
  margin: 12px 0;
  
  &:focus {
    background: #ededed;
    outline: none;
  }
}

/* Brings back drag and drop because pos: relative messes it up */
.jcrop-holder * {
  position: static;
}

/* Icons */
[class^="icon-"], [class*=" icon-"] {
	font-family: Scooby;
	font-style: normal;
}
.icon-heart:before {
	content: "\e000";
}
.icon-comments:before {
	content: "\e001";
}
.icon-dribbble:before {
	content: "\e002";
}
.icon-twitter:before {
	content: "\e003";
}
