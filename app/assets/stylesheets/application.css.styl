footer {
  overflow: hidden;
  background: url(pattern-footer.png);
  bottom: 0;
  box-shadow:
  inset 0px 1px 0px 0px #c7c7c7,
  inset 0px 12px 12px -12px rgba(0,0,0, .14);
  margin-top: 18px;
  padding: 6px 0px 10px 0px;
  width: 100%;
}
footer .wrapper .logo {
  top: 10px;
}
.more {
  background: url(pattern-main.png);
  border-radius: 50%;
  border: 1px solid #c2c2c2;
  box-shadow:
  inset 0px -10px 12px -7px #fafafa,
  0px 12px 12px -12px rgba(0,0,0, .2);
  height: 0;
  left: 44.35%; //middle?
  padding: 54px;
  position: absolute;
  top: -70px;
  width: 0;
  z-index: 5;
  
  &:before, 
  &:after {
    border-top: 12px solid #dadada; //cacaca
    border-left: 12px solid transparent;
    border-right: 12px solid transparent;
    bottom: 20px;
    content:"";
    height: 0;
    left: 41px;
    position: absolute;
    width: 0;
  }
  &:before,  //shadow
  &:hover:before {
    border-top: 13px solid #cacaca; //bababa
    border-left: 13px solid transparent;
    border-right: 13px solid transparent;
    left: 40px; 
  }
  &:hover:before {
    border-top: 13px solid #bababa; //a9a9a9
  }
  &:hover:after {
    border-top: 12px solid #cacaca; //bbb
  }
}
footer .nav {
  text-align: right;
}
footer .nav a {
  color: #bababa;
  font-size: 14px;
  margin-left: 26px;
  top: -10px;
  text-shadow: 1px 1px 0px #fafafa;
  text-transform: lowercase;
  
  &:hover {
     color: #a1a1a1; 
  }
}