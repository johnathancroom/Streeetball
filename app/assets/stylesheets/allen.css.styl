box-shadow() {
  box-shadow: arguments;
}
box-sizing() {
  -webkit-box-sizing: arguments;
     -moz-box-sizing: arguments;
          box-sizing: arguments;
}

/*  Designed by Allen Lawson */

* { 
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  position: relative;
  vertical-align: top;
}
a {
  color: inherit;
  font: inherit;
  text-decoration: none;
}
body {
  background: url("pattern-main.png") #f5f5f5;
  font-family: Trebuchet MS, sans-serif;
}
@font-face {
    font-family: "PTSansRegular";
    src: url("/fonts/ptsans-webfont.eot");
    src: url("/fonts/ptsans-webfont.eot?#iefix") format("embedded-opentype"),
         url("/fonts/ptsans-webfont.woff") format("woff"),
         url("/fonts/ptsans-webfont.ttf") format("truetype"),
         url("/fonts/ptsans-webfont.svg#PTSansRegular") format("svg");
    font-weight: normal;
    font-style: normal;
}
/* Custom Selection Styling 
---------------------------------------- */
::-moz-selection {
  color: #fff;
  color: rgba(255, 255, 255, 0.85);
  background: #444;
  text-shadow: none;
}
::selection {
  color: #fff;
  color: rgba(255, 255, 255, 0.85);
  background: #444;
  text-shadow: none;
}
.wrapper {
  margin: 0 auto;
  max-width: 945px;
  padding: 0 20px;
}
.top-nav {
  background: url("noise.png");
  border-bottom: 1px solid #000;
  box-shadow:
    0px 1px 0 0 #999,
    inset 0px -70px 30px -40px rgba(0,0,0,0.4),
    inset 0px -1px 0 0 rgba(255,255,255,.2),
    0 4px 0 0 rgba(52,52,52,.04);
  color: #f5f5f5;
  font-size: 18px;
  font-family: PTSansRegular;
  margin-bottom: 30px;
  padding: 8px 0px 4px 0;
}
.h-info {
  color: #DDD;
  float: right;
  font-size: 13px;
  letter-spacing: 1px;
  padding-top: 5px;
  text-align: right;
  text-decoration: none;
  text-shadow: 1px 1px 0px rgba(0,0,0,0.4);
  vertical-align: middle;
  width: 300px;
}
.h-info .profile-image {
  border: 2px solid #282828;
  box-shadow: 0px 1px 0px 0px #525252;
  margin-right: 5px;
  top: -7px;
  width: 28px;
}
.h-info a {
  margin-left: 5px;
  text-transform: lowercase;
}
.h-info a:hover {
  text-decoration: underline;
}
.h-info .primary {
  background: #75b22e;
  border-radius: 4px;
  box-shadow:
    inset 0 1px 0 0 rgba(255,255,255,0.3),
    inset 0 -30px 40px -20px rgba(0,0,0,0.5),
    inset 0 0 3px 0 rgba(255,255,255,0.3),
    0 1px 0 0 rgba(0,0,0,0.2),
    0 -1px 0 0 rgba(0,0,0,0.2),
    inset 0 13px 0 0 rgba(255,255,255,.1),
    0 0 3px 0 rgba(0,0,0,0.3);
  cursor: pointer;
  display: inline-block;
  padding: 7px 10px;
  text-shadow: 1px 1px 1px rgba(0,0,0,0.3);
  top: -7px;
  user-select: none;
}
.h-info .primary:hover {
  text-decoration: none;
}
.h-info .primary:active { 
  background: #69a227;
  top: -6px;
}
#Logo {
  background: url("logo.png") no-repeat left;
  display: inline;
  height: 50px;
  float: left;
  width: 500px;
}
.hookText{
  display: inline;
  float: right;
  font-size: 1.2em; 
  font-weight: bold;
  font-family: PTSansRegular;
  text-align: left;
  text-shadow: 1px 1px 0 #fff;
  width: 510px;
}
.hookText span {
  color: #7ca14f;
}
.hookText i {
  color: #a1a1a1;
  font-style: normal;
}
.sexy-line {
  border-bottom: 2px solid #f2f2f2;
  border-top: 2px solid #e8e8e8;
  border-left: none;
  border-right: none;
  clear: both;
  top: 2em;
}

/* Posts
---------------------------------------- */
.post {
  background: #fafafa;
  border-radius: 3px;
  box-shadow: 0 1px 2px 0 #dfdfdf;
  display: inline-block;
  margin: 0 14px 20px 0;
}
.post img {
  margin: 10px;
  width: 192px;
}