<div class="single">
  <div class="post">
    <%= s3_image_tag @post.image_url %>
  </div>
  
  <h1><%= @post.name %></h1>
  
  <div class="details">
    <div class="by">by <%= link_to @post.user.username, @post.user %></div>
    
    <div class="social">
      <%= link_to '23', @post, :class => 'icon-heart js-post-like' %>
      <%= link_to @comments.count, '#comments', :class => 'icon-comments' %>
    </div>
  </div>
  
  <%= render :template => "comments/index" %>
  
  <% if logged_in %>
    <%= render :template => "comments/new" %>
  <% end %>
</div>