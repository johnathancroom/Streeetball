<% if !logged_in && params[:controller] == 'posts' && params[:action] == 'index' %>
  <div class="preview">
    <div class="illustrations">
      <%= image_tag '', :alt => 'Prospect illustration', :width => 200, :height => 150, :id => 'js-prospect' %>
      <%= image_tag '', :alt => 'Player illustration', :width => 200, :height => 150, :id => 'js-player' %>
    </div><!--
  
    --><div class="details">
      <p class="prospect">
        Prospect stuff
      </p>
      <p class="player">
        <span class="catch"><%= image_tag 'logo-intro.png', :alt => 'Streeetball', :class =>'ball' %> is giving players more time to play.</span>
        Cabbage swede west indian gherkin tinda fat drumstick; garden rocket ocra. <span class="icon-prospect">Prospect</span>
        Greater Plantain common bean pea cauliflower squash; good king henry. <span class="icon-player">Player</span>
        Florence fennel - tinda spinach!
      </p>
      <%= link_to 'Learn more', about_path, :class => 'learn' %>
    </div>
  </div>
<% end %>

<div class="posts">
  <% @posts.each_with_index do |post, index| %>
    <%= raw '-->' if index != 0 %><%= link_to image_tag(post.image.url(:small), :alt => post.name), post, :class => 'post' %><%= raw '<!--' if index != @posts.count-1 %>
  <% end %>
</div>
