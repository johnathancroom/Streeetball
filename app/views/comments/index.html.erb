<div id="comments">
  <% @comments.each_with_index do |comment, index| %>
    <div class="comment<%= ' last' if index == @comments.count-1 %>">
      <%= link_to (image_tag comment.user.avatar.url(:small), :class => 'profile-image'), comment.user, :class => 'image' %>
      <%= link_to comment.user.username, comment.user, :class => 'user' %>
      <p class="blurb"><%= parse_mentions comment.blurb %></p>
      <%= time_tag comment.created_at, "#{time_ago_in_words comment.created_at} ago" %>
      <%= link_to 'Reply', '#', :class => 'reply' %>
    </div>
  <% end %>
</div>