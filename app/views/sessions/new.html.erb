<% @page_title = 'Sign in' %>

<h1>Sign in</h1>

<%= form_tag signin_path do %>
  <%= text_field_tag :user, params[:user], :placeholder => 'Username or Email' %>
  <%= password_field_tag :password, '', :placeholder => 'Password' %>
  <%= submit_tag 'Submit', :class => 'submit' %>
  <a href="#" class="forgot">Forgot password?</a>
<% end %>
