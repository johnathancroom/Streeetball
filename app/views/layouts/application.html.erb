<!DOCTYPE html>
<html>
<head>
  <title>Streeetball &mdash; Prospect's Welcome</title>
  <%= stylesheet_link_tag 'application' %>
  <link rel="shortcut icon" href="images/favicon.png">
  <%= favicon_link_tag 'favicon.png' %>
  <meta charset="utf8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0" />
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="top-nav">
    <div class="wrapper">
      <%= link_to (image_tag 'logo-dark.png'), root_path %>
      
      <div class="h-info">
        <% if logged_in %>
          <%= link_to (profile_image_tag current_user, :class => 'profile-image'), current_user %>
          <%#= link_to "Upload", new_post_path, :class => 'primary' %>
          <%= link_to "Sign out", signout_path %>
        <% else %>
          <%= link_to "Sign in", signin_path, :class => 'primary' %>
          <%= link_to "Sign up", signup_path %>
        <% end %>
      </div>
    </div>
  </nav>
  
  <div class="wrapper">  
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :class => "flash_#{name}" %>
    <% end %>
    
    <%#= params %>

    <%= yield %>
  </div>
</body>
</html>
