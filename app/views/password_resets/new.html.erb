<% @page_title = 'Reset Password' %>

<div class="slim">
  <h1>Reset Password</h1>
  
  <%= form_tag password_resets_path, :method => :post do %>
    <%= text_field_tag :email, params[:email], :placeholder => 'Email Address' %>
    <%= submit_tag 'Reset Password', :class => 'submit' %>
  <% end %>
</div>